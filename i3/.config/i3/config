# ==============================================================================
# i3 config for Minimalist & High Performance
# ==============================================================================

# --- 1. 基础设置 ---
set $mod Mod1
# 字体设置 (适配 4K，字号设为 11 或 12，依靠 DPI 缩放)
font pango:JetBrainsMono Nerd Font 11

# 拖拽窗口修饰键
floating_modifier $mod

# --- 2. 视觉风格 (Nord 配色) ---
# 去除标题栏，使用 2px 边框
default_border pixel 2
default_floating_border pixel 2

# 窗口间隙 (Gaps) - 极简主义的一点点呼吸感
gaps inner 10
gaps outer 0

# 调色板
set $bg-color            #FAFAFA
set $inactive-bg-color   #EAEAEA
set $text-color          #383A42
set $inactive-text-color #A0A1A7
set $focused-border      #528BFF
set $urgent-bg-color     #E06C75

# window colors         border           background         text                 indicator        child_border
client.focused          $focused-border  $bg-color          $text-color          $focused-border  $focused-border
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color $inactive-bg-color $inactive-bg-color
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color $inactive-bg-color $inactive-bg-color
client.urgent           $urgent-bg-color $urgent-bg-color   $bg-color            $urgent-bg-color $urgent-bg-color
client.placeholder      $inactive-bg-color $inactive-bg-color $inactive-text-color $inactive-bg-color $inactive-bg-color

client.background       #FFFFFF

# --- 3. 核心快捷键 ---
# 启动终端 (Alacritty)
bindsym $mod+Return exec alacritty
bindsym $mod+Tab workspace back_and_forth
# 启动程序启动器 (dmenu, 顶部显示, 颜色适配)
bindsym $mod+space exec --no-startup-id dmenu_run -fn 'JetBrainsMono Nerd Font-12' -nb '#2E3440' -nf '#D8DEE9' -sb '#81A1C1' -sf '#2E3440'

# 关闭窗口
bindsym $mod+Shift+q kill

# --- 4. 窗口焦点与移动 (Vim 风格) ---
# 焦点移动
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# 窗口位置移动
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# --- 5. 布局控制 ---
# 分割模式 (水平/垂直)
bindsym $mod+b split h
bindsym $mod+v split v

# 全屏切换
bindsym $mod+f fullscreen toggle

# 浮动/平铺切换
bindsym $mod+Shift+space floating toggle

# 在浮动和铺满之间切换焦点
# bindsym $mod+space focus mode_toggle

# --- 6. 工作区 (Workspaces) ---
set $ws1 "1: Term"
set $ws2 "2: Web"
set $ws3 "3: Code"
set $ws4 "4: Read"
set $ws5 "5: Chat"
set $ws6 "6: Misc"

# 切换工作区
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6

# 移动窗口到工作区
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6

# --- 7. 系统管理快捷键 ---
# 重载配置
bindsym $mod+Shift+c reload
# 重启 i3
bindsym $mod+Shift+r restart
# 退出 i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# --- 8. 硬件控制 (音量/亮度) ---
# 需要安装: pulseaudio-alsa (或 pipewire-pulse) 和 brightnessctl
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%-

# --- 9. 自启动程序 (Startup) ---
# 混成器 (解决撕裂和透明)
exec_always --no-startup-id picom -b
# 设置壁纸 (需安装 feh)
exec_always --no-startup-id feh --bg-fill ~/Pictures/wallpaper.jpg
# 输入法
exec_always --no-startup-id fcitx5
# 锁屏 (配合 xss-lock)
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -c 2E3440 --nofork

# 底部状态栏
bar {
        status_command i3status
        position bottom
        font pango:JetBrainsMono Nerd Font 10
        
        # 纯白背景，深灰文字，模拟纸张顶部的页眉感
        colors {
            background #FAFAFA
            statusline #383A42
            separator  #A0A1A7
            
            # 工作区颜色
            focused_workspace  #FAFAFA #FAFAFA #528BFF
            active_workspace   #EAEAEA #EAEAEA #383A42
            inactive_workspace #FAFAFA #FAFAFA #A0A1A7
            urgent_workspace   #E06C75 #E06C75 #FAFAFA
        }
}


# 禁用休眠/黑屏
exec --no-startup-id xset s off
exec --no-startup-id xset s noblank
exec --no-startup-id xset -dpms

# Window rules
## WPS
for_window [class="wps" title="WPS Office"] floating disable
for_window [class="wps" title="^$"] floating enable, resize set 1100 700, move position center
for_window [class="wps" title="^wpsoffice$"] floating enable, resize set 1100 700, move position center

# file chooser
for_window [window_role="GtkFileChooserDialog"] floating enable, resize set 1100 700, move position center
for_window [window_type="dialog"] floating enable, move position center
